<h1>Edit <%= @figure.name %>:</h1>
<form action="/figures/<%= @figure.id %>" method="post">
  <label for="figure_name"><h3>Figure: </h3></label>
  <input id="figure_name" type="text" name="figure[name]" value=<%= @figure.name %>></br>
  
  <label for="landmark_name"><h3>Landmarks: </h3></label>
  <% Landmark.all.each do |landmark| %>
    <input id="<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input></br>
  <% end %>

  <label for="new_landmark"><h4>Or, create a new landmark:</h4></label>
  <input id="new_landmark" type="text" name="landmark[name]"></br>
  
  <label for="title_name"><h3>Titles: </h3></label>
  <% Title.all.each do |title| %>
    <input id="<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input></br>
  <% end %>

  <label for="new_title"><h4>Or, create a new title:</h4></label>
  <input id="new_title" type="text" name="title[name]"></br>

  <input type="submit" value="Edit Figure">
</form>
