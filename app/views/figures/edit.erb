<form action="/figures/<%= @figure.id %>" method="post">
  <label for="figure_name">Figure: </label></br>
  <input id="figure_name" type="text" name="figure[name]" value=<%= @figure.name %>></br>
  
  <label for="landmark_name">Landmarks: </label></br>
  <% Landmark.all.each do |landmark| %>
    <input id="<%= landmark.id %>" type="checkbox" name="landmark[id][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input></br>
  <% end %>
  
  <label for="title_name">Titles: </label></br>
  <% Title.all.each do |title| %>
    <input id="<%= title.id %>" type="checkbox" name="title[id][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input></br>
  <% end %>

  <input type="submit" value="submit">
</form>
